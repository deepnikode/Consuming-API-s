<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.deep.stockclient.UserController">

    <!-- User List -->
    <ListView fx:id="userListView" VBox.vgrow="ALWAYS"/>

    <!-- User Details Section -->
    <VBox>
        <HBox>
            <Label text="ID:"/>
            <Label fx:id="idLabel"/>
        </HBox>
        <HBox>
            <Label text="Name:"/>
            <Label fx:id="nameLabel"/>
        </HBox>
        <HBox>
            <Label text="Email:"/>
            <Label fx:id="emailLabel"/>
        </HBox>
        <HBox>
            <Label text="Phone:"/>
            <Label fx:id="phoneLabel"/>
        </HBox>
        <HBox>
            <Label text="Role:"/>
            <Label fx:id="roleLabel"/>
        </HBox>
        <HBox>
            <Label text="Colour Palette:"/>
            <Label fx:id="colourPaletteLabel"/>
        </HBox>
        <HBox>
            <Label text="Created At:"/>
            <Label fx:id="createdAtLabel"/>
        </HBox>
        <HBox>
            <Label text="Updated At:"/>
            <Label fx:id="updatedAtLabel"/>
        </HBox>
    </VBox>
</VBox>
